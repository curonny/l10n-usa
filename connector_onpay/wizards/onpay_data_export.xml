<odoo>
    <record id="view_onpay_export_wizard_form" model="ir.ui.view">
        <field name="name">onpay.export.data.form</field>
        <field name="model">onpay.export</field>
        <field name="arch" type="xml">
            <form string="OnPay Export Wizard">
                <group col="4" colspan="4">
                    <field name="date_from" required="1" />
                    <field name="date_to" required="1" />
                    <field name="file_type" required="1" />
                </group>
                <footer>
                <button
                        class="oe_highlight"
                        name="export_data"
                        string="Export"
                        type="object"
                    /> or
                <button class="oe_link" special="cancel" string="Cancel" /></footer>
            </form>
        </field>
    </record>
    <record id="action_onpay_export_data" model="ir.actions.act_window">
        <field name="name">OnPay Export Wizard</field>
        <field name="res_model">onpay.export</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <record id="employee_allow_onpay_export_wizard" model="ir.actions.act_window">
            <field name="name">Export to OnPay</field>
            <field name="res_model">onpay.export</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
            <field name="binding_model_id" ref="hr.model_hr_employee" />
            <field name="binding_view_types">form,tree</field>
            <field name="view_id" ref="view_onpay_export_wizard_form" />
            <field
            name="groups_id"
            eval="[(4, ref('connector_onpay.group_onpay_allow_export'))]"
        />
    </record>

    <record id="view_wiz_location_content_view" model="ir.ui.view">
        <field name="name">wiz.xls.content.form</field>
        <field name="model">wiz.xls.content</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form string="Export File">
                <group>
                    <field invisible="1" name="name" />
                    <field filename="name" name="file" nolabel="1" readonly="1" />
                </group>
                <footer>
                    <button class="oe_highlight" special="cancel" string="Close" />
                </footer>
            </form>
        </field>
    </record>
</odoo>
